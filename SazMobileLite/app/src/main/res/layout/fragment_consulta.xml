<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ConsultaF">


    <include
        layout="@layout/toolbar_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:background="#f4f4f3"

                android:orientation="vertical">


                <Button
                    android:id="@+id/btnBarCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_buscar"
                    android:text="Escanear"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#f4f4f3"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:text="Estilo"
                        android:textColor="#3f3f40"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="115dp"
                        android:text="Color"
                        android:textColor="#3f3f40"
                        android:textSize="20dp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/sp2"
                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:background="#e2e2de "
                        android:elegantTextHeight="false"
                        android:hint="Estilo"
                        android:singleLine="true"
                        android:textColor="#3f3f40"
                        android:textSize="25dp" />

                    <Spinner
                        android:id="@+id/sp"
                        style="@style/spinner_style"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:clickable="true" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f4f4f3"
                    android:orientation="horizontal">
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f4f4f3"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="195dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Acabado"
                            android:textColor="#3f3f40"
                            android:textSize="20dp" />
                    <Spinner
                        android:id="@+id/sp3"
                        style="@style/spinner_style"
                        android:layout_width="185dp"
                        android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="215dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Marca"
                            android:textColor="#3f3f40"
                            android:textSize="20dp" />


                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/sp4"
                            android:layout_width="205dp"
                            android:contextClickable="true"
                            style="@style/spinner_style"
                            android:importantForAutofill="auto"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>











                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Corrida"
                        android:layout_marginTop="10dp"
                        android:textColor="#3f3f40"
                        android:textSize="20dp" />
                    <Spinner
                        android:id="@+id/sp5"
                        style="@style/spinner_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#f4f4f3"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:text="Selecciona un punto"
                        android:textColor="#3f3f40"
                        android:textSize="30dp" />

                    <Spinner
                        android:id="@+id/punto"
                        style="@style/spinner_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_width="1000dp"
                        android:layout_height="5dp"
                        android:layout_marginTop="10dp"
                        android:background="#004d73" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="0dp"
                        android:background="#f4f4f3"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="2dp"
                            android:text="Existencia"
                            android:textColor="#3f3f40"
                            android:textSize="20dp" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="18dp"
                            android:text="Precio"
                            android:textColor="#3f3f40"
                            android:textSize="20dp" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="28dp"
                            android:text="Descuento"
                            android:textColor="#3f3f40"
                            android:textSize="20dp" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="23dp"
                            android:text="Total"
                            android:textColor="#3f3f40"
                            android:textSize="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#f4f4f3"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/existenciasTXT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="40dp"
                            android:text=""
                            android:textColor="#c61717"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/precioTXT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="43dp"
                            android:text=""
                            android:textColor="#3f3f40"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/descuentoTXT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="28dp"
                            android:text=""
                            android:textColor="#f93f3f40"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/totalTXT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="23dp"
                            android:drawableLeft="@drawable/pesos"
                            android:text=""
                            android:textColor="#3f3f40"
                            android:textSize="20dp"
                            android:textStyle="bold" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"

                            >


                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="#f4f4f3"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnDetalle"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_buscar"
                        android:text="Imagen del producto"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btnOtras"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_buscar"
                        android:gravity="center"
                        android:text="Ver en otras tiendas"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btnSimilares"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_buscar"
                        android:gravity="center"
                        android:text="Ver similares"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />







                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</FrameLayout>