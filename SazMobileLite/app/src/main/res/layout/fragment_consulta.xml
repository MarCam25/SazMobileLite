<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ConsultaF">


    <include
        layout="@layout/toolbar_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f4f4f3"
                android:orientation="vertical">


                <Button
                    android:id="@+id/btnBarCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_buscar"
                    android:text="Escanear"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:visibility="invisible"
                    android:textSize="20dp" />





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edtEstilo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:background="#e2e2de "
                        android:elegantTextHeight="false"
                        android:hint="Estilo"
                        android:singleLine="true"
                        android:textColor="#3f3f40"
                        android:textAlignment="center"
                        android:textSize="25dp" />


                    <Button
                        android:id="@+id/btnBuscar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:text="Buscar"
                        />


                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f4f4f3"
                    android:orientation="vertical">





                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#f4f4f3"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:text="Selecciona un producto"
                        android:textColor="#3f3f40"
                        android:textSize="20dp" />

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/spProducto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/spinner_style"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#f4f4f3"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:text="Selecciona un punto"
                        android:textColor="#3f3f40"
                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/punto"
                        style="@style/spinner_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"


                        ></Spinner>

                    <TextView
                        android:layout_width="1000dp"
                        android:layout_height="5dp"
                        android:layout_marginTop="10dp"
                        android:background="#004d73" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="0dp"
                        android:background="#f4f4f3"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Existencia"
                            android:textColor="#3f3f40"
                            android:textSize="20dp" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Precio"
                            android:textColor="#3f3f40"
                            android:textSize="20dp" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:text="Descuento"
                            android:textColor="#3f3f40"
                            android:textSize="20dp" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Total"
                            android:textColor="#3f3f40"
                            android:textSize="20dp" />

                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#f4f4f3"
                        android:orientation="horizontal">



                        <TextView
                            android:id="@+id/existenciasTXT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#c61717"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/precioTXT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:text=""
                            android:textColor="#3f3f40"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/descuentoTXT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:text=""
                            android:textColor="#f93f3f40"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/totalTXT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:text=""
                            android:textColor="#3f3f40"
                            android:textSize="20dp"
                            android:textStyle="bold" />




                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="#f4f4f3"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnDetalle"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_buscar"
                        android:text="Imagen del producto"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btnOtras"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_buscar"
                        android:gravity="center"
                        android:text="Ver en otras tiendas"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btnSimilares"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_buscar"
                        android:gravity="center"
                        android:text="Ver similares"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />



                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="23dp"
                        android:text=""
                        android:textColor="#3f3f40"
                        android:textSize="20dp"
                        android:textStyle="bold" />



                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</FrameLayout>