<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConusltaMarca">



    <include
        layout="@layout/toolbar_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f4f4f3"
                android:orientation="vertical">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#f4f4f3"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Marca"
                        android:gravity="center"
                        android:textColor="#3f3f40"
                        android:textStyle="bold"
                        android:textSize="20dp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/sp4"
                        style="@style/spinner_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:contextClickable="true"
                        android:importantForAutofill="auto" />


                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f4f4f3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginTop="0dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Estilo"
                            android:gravity="center"
                            android:textColor="#3f3f40"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Color"
                            android:gravity="center"
                            android:textColor="#3f3f40"
                            android:textStyle="bold"
                            android:textSize="20dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Acabado"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="#3f3f40"
                            android:textSize="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginTop="0dp"
                        >

                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/sp2"
                            style="@style/spinner_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <Spinner
                            android:id="@+id/sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            style="@style/spinner_style"
                            android:clickable="true" />

                        <Spinner
                            android:id="@+id/sp3"
                            style="@style/spinner_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            />
---Marcaloca--


                    </LinearLayout>

                </LinearLayout>











                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Corrida"
                        android:layout_marginTop="0dp"
                        android:textColor="#3f3f40"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/sp5"
                        style="@style/spinner_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#f4f4f3"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:textStyle="bold"
                        android:text="Selecciona un punto"
                        android:textColor="#3f3f40"
                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/punto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/spinner_style"

                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_width="1000dp"
                        android:layout_height="5dp"
                        android:layout_marginTop="10dp"
                        android:background="#004d73" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="0dp"
                        android:background="#f4f4f3"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Existencia"
                            android:layout_marginTop="0dp"
                            android:textColor="#3f3f40"
                            android:textStyle="bold"
                            android:textSize="20dp" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Precio"
                            android:layout_marginLeft="15dp"
                            android:textColor="#3f3f40"
                            android:textStyle="bold"
                            android:textSize="20dp" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Descuento"
                            android:textColor="#3f3f40"
                            android:textStyle="bold"
                            android:textSize="20dp" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Total"
                            android:textColor="#3f3f40"
                            android:textStyle="bold"
                            android:textSize="20dp" />

                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#f4f4f3"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/existenciasTXT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=""
                            android:layout_marginLeft="5dp"
                            android:textColor="#FF0303"
                            android:textSize="30dp"
                            />

                        <TextView
                            android:id="@+id/precioTXT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#3f3f40"
                            android:textSize="16dp"
                            />

                        <TextView
                            android:id="@+id/descuentoTXT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#f93f3f40"
                            android:textSize="16dp"
                             />

                        <TextView
                            android:id="@+id/totalTXT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#3f3f40"
                            android:textSize="16dp"
                             />





                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="#f4f4f3"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnDetalle"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_buscar"
                        android:text="Imagen del producto"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btnOtras"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_buscar"
                        android:gravity="center"
                        android:text="Ver en otras tiendas"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btnSimilares"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_buscar"
                        android:gravity="center"
                        android:text="Ver similares"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />


                    <Button
                        android:id="@+id/btnBarCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/btn_buscar"
                        android:text="Escanear"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:visibility="invisible"
                        android:textSize="20dp" />



                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="23dp"
                        android:text=""
                        android:textColor="#3f3f40"
                        android:textSize="20dp"
                        android:textStyle="bold" />



                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>